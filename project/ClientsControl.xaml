<Window x:Class="project.ClientsControl"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:project"
        mc:Ignorable="d"
        Title="ClientsControl" Height="450" Width="800" Loaded="Window_Loaded" >
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Шапка -->
            <RowDefinition Height="*"/>
            <!-- Таблица -->
            <RowDefinition Height="Auto"/>
            <!-- Поля ввода -->
            <RowDefinition Height="Auto"/>
            <!-- Кнопки -->
        </Grid.RowDefinitions>

        <!-- Шапка -->
        <Border Grid.Row="0" Background="#955251" Padding="10">
            <DockPanel>
                <Ellipse Width="40" Height="40" Fill="White" DockPanel.Dock="Left" Margin="5"/>
                <TextBlock Text="Гранат" 
                       Foreground="White" 
                       FontSize="18" 
                       FontWeight="Bold" 
                       Margin="20,0"/>
                <TextBlock Text="Панель редактирования записей" 
                       Foreground="White" 
                       FontSize="16" 
                       FontWeight="SemiBold" 
                       HorizontalAlignment="Center" 
                       VerticalAlignment="Center"/>
            </DockPanel>
        </Border>

        <!-- Таблица расписания -->
        <DataGrid x:Name="dgRegistration"
                  Grid.Row="1"
                  AutoGenerateColumns="False"
                  Margin="10"
                  IsReadOnly="True">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Клиент" Binding="{Binding ClientFirstName}" Width="150"/>
                <DataGridTextColumn Header="Сотрудник" Binding="{Binding EmployeeLastName}" Width="150"/>
                <DataGridTextColumn Header="Процедура" Binding="{Binding ServiceName}" Width="150"/>
                <DataGridTextColumn Header="Дата записи" Binding="{Binding RegistrationDate}" Width="150"/>
                <DataGridTemplateColumn Header="Статус" Width="120">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Border CornerRadius="4"
                    Background="{Binding StatusColor}"
                    Padding="4"
                    HorizontalAlignment="Center">
                                <TextBlock Text="{Binding StatusName}"
                           Foreground="White"
                           FontWeight="SemiBold"
                           HorizontalAlignment="Center"/>
                            </Border>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>
        </DataGrid>

        <!-- Поля ввода с подписями -->
        <Grid Grid.Row="2" Margin="10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="150"/>
                <ColumnDefinition Width="150"/>
                <ColumnDefinition Width="150"/>
                <ColumnDefinition Width="150"/>
                <ColumnDefinition Width="100"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <!-- Заголовки -->
                <RowDefinition Height="Auto"/>
                <!-- Поля ввода -->
            </Grid.RowDefinitions>

            <!-- Заголовки -->
            <TextBlock Text="Клиент" Grid.Row="0" Grid.Column="0" 
                   HorizontalAlignment="Center" FontWeight="Bold"/>
            <TextBlock Text="Сотрудник" Grid.Row="0" Grid.Column="1" 
                   HorizontalAlignment="Center" FontWeight="Bold"/>
            <TextBlock Text="Процедура" Grid.Row="0" Grid.Column="2" 
                   HorizontalAlignment="Center" FontWeight="Bold"/>
            <TextBlock Text="Дата записи" Grid.Row="0" Grid.Column="3" 
                   HorizontalAlignment="Center" FontWeight="Bold"/>
            <TextBlock Text="Статус" Grid.Row="0" Grid.Column="4" 
                   HorizontalAlignment="Center" FontWeight="Bold"/>

            <!-- Поля ввода -->
            <TextBox x:Name="txtClient" Grid.Row="1" Grid.Column="0" Margin="5"/>
            <TextBox x:Name="txtEmployee" Grid.Row="1" Grid.Column="1" Margin="5"/>
            <TextBox x:Name="txtService" Grid.Row="1" Grid.Column="2" Margin="5"/>
            <DatePicker x:Name="dpDate" Grid.Row="1" Grid.Column="3" Margin="5"/>
            <TextBox x:Name="txtStatus" Grid.Row="1" Grid.Column="4" Margin="5"/>
        </Grid>

        <!-- Кнопки управления -->
        <StackPanel Grid.Row="3" Orientation="Horizontal" Margin="10">
            <Button Content="➕ Добавить запись" Background="#5cb85c" Foreground="White" Padding="15,5" Margin="5" Click="Button_Click"/>
            <Button Content="🗑 Удалить запись" Background="#d9534f" Foreground="White" Padding="15,5" Margin="5"/>
            <Button Content="✏ Изменить запись" Background="#f0ad4e" Foreground="White" Padding="15,5" Margin="5"/>
        </StackPanel>
    </Grid>

</Window>
