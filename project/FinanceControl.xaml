<Window x:Class="project.FinanceControl"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:project"
        mc:Ignorable="d"
        Title="FinanceControl" Height="475" Width="840"  Loaded="Window_Loaded">
    <Window.Resources>
        <Style x:Key="FinanceCardStyle" TargetType="Border">
            <Setter Property="Background" Value="White"/>
            <Setter Property="CornerRadius" Value="10"/>
            <Setter Property="Padding" Value="20"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect BlurRadius="10" ShadowDepth="2" Opacity="0.1"/>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="DataGridStyle" TargetType="DataGrid">
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="#DDDDDD"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="RowBackground" Value="White"/>
            <Setter Property="AlternatingRowBackground" Value="#F8F9FA"/>
            <Setter Property="HorizontalGridLinesBrush" Value="#EEEEEE"/>
            <Setter Property="VerticalGridLinesBrush" Value="#EEEEEE"/>
            <Setter Property="HeadersVisibility" Value="Column"/>
            <Setter Property="AutoGenerateColumns" Value="False"/>
            <Setter Property="CanUserAddRows" Value="False"/>
            <Setter Property="CanUserDeleteRows" Value="False"/>
            <Setter Property="CanUserReorderColumns" Value="False"/>
            <Setter Property="CanUserResizeColumns" Value="True"/>
            <Setter Property="CanUserResizeRows" Value="False"/>
            <Setter Property="CanUserSortColumns" Value="True"/>
            <Setter Property="GridLinesVisibility" Value="Horizontal"/>
            <Setter Property="FontSize" Value="12"/>
        </Style>

        <Style x:Key="ReportButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#5CB85C "/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="20,10"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Style.Resources>
                <Style TargetType="Border">
                    <Setter Property="CornerRadius" Value="6"/>
                </Style>
            </Style.Resources>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#B8941F"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="InputFieldStyle" TargetType="TextBox">
            <Setter Property="Padding" Value="10,8"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="#DDDDDD"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="FontSize" Value="12"/>
            <Style.Resources>
                <Style TargetType="Border">
                    <Setter Property="CornerRadius" Value="4"/>
                </Style>
            </Style.Resources>
            <Style.Triggers>
                <Trigger Property="IsFocused" Value="True">
                    <Setter Property="BorderBrush" Value="#D4AF37"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="LabelStyle" TargetType="TextBlock">
            <Setter Property="Foreground" Value="#2C3E50"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Margin" Value="0,0,5,0"/>
        </Style>
    </Window.Resources>

    <Grid Background="#F8F9FA">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Шапка -->
        <Border Grid.Row="0" 
        Background="#955251" 
        Padding="20" 
        BorderThickness="0,0,0,2" 
        BorderBrush="#955251">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Заголовок -->
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                    <TextBlock Text="💰" 
                       FontSize="20" 
                       Margin="0,0,10,0"
                           Foreground="White"/>
                    <TextBlock Text="Финансы" 
                       Foreground="White" 
                       FontSize="20" 
                       FontWeight="Bold"/>
                </StackPanel>

                <!-- Период -->
                <StackPanel Orientation="Horizontal" 
                    HorizontalAlignment="Center" 
                    VerticalAlignment="Center"
                    Grid.Column="1">
                    <TextBlock Text="Период:" 
                       Foreground="White" 
                       FontWeight="SemiBold"
                       Margin="0,0,10,0"/>
                    <TextBlock Text="Ноябрь 2025" 
                       Foreground="White"/>
                </StackPanel>

                
            </Grid>
        </Border>

        <!-- Основное содержимое - DataGrid -->
        <Border Grid.Row="1" 
        Margin="20,20,20,10" 
        Background="White" 
        CornerRadius="10">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Заголовок таблицы -->
                <Border Grid.Row="0" 
                Background="#F8F9FA" 
                Padding="15" 
                CornerRadius="10,10,0,0"
                BorderThickness="0,0,0,1"
                BorderBrush="#EEEEEE">
                    <TextBlock Text="Финансовые операции" 
                       FontSize="16" 
                       FontWeight="SemiBold" 
                       Foreground="#2C3E50"/>
                </Border>

                <!-- DataGrid -->
                <DataGrid x:Name="FinanceDataGrid" 
                 Grid.Row="1"
                 Style="{StaticResource DataGridStyle}"
                 Margin="0">
                    <DataGrid.Columns>
                        
                        <DataGridTextColumn Header="Процедура" 
                                   Binding="{Binding services_name}" 
                                   Width="*"/>
                        <DataGridTextColumn Header="Цена" 
                                   Binding="{Binding price}" 
                                   Width="*"/>
                    </DataGrid.Columns>
                </DataGrid>
            </Grid>
        </Border>

        <!-- Поля ввода -->
        <Border Grid.Row="2" 
            Background="White" 
            Margin="20,0,20,10" 
            Padding="20" 
            CornerRadius="10"
            BorderThickness="1"
            BorderBrush="#EEEEEE">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

               

                <!-- Поле ввода процедуры -->
                <TextBlock Text="Процедура:" 
                       Style="{StaticResource LabelStyle}"
                       Grid.Column="0"/>
                <TextBox x:Name="ProcedureInput" 
                     Grid.Column="1"
                     Margin="0,0,15,0"
                    />
                


                <!-- Поле ввода цены -->
                <TextBlock Text="Цена:" 
                       Style="{StaticResource LabelStyle}"
                       Grid.Column="2"/>
                <TextBox x:Name="PriceInput" 
                    Grid.Column="3"
                    Style="{StaticResource InputFieldStyle}"
                    Margin="0,0,15,0"
                    Text="0"/>

                <!-- Кнопка добавления -->
                <Button Content="➕ Добавить" 
                    Grid.Column="4"
                    Background="#F0AD4E"
                    Foreground="White"
                    BorderThickness="0"
                    Padding="15,10"
                    FontWeight="SemiBold"
                    FontSize="12"
                    Cursor="Hand" Click="Button_Click_1"
                    >
                    <Button.Resources>
                        <Style TargetType="Border">
                            <Setter Property="CornerRadius" Value="6"/>
                        </Style>
                    </Button.Resources>
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Background" Value="#D4AF37"/>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#B8941F"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>
                <Button Content="🗑 Удалить"
        Grid.Column="6"
        Background="#D9534F"
        Foreground="White"
        BorderThickness="0"
        Padding="15,10"
        FontWeight="SemiBold"
        FontSize="12"
        Cursor="Hand"
        Click="DeleteButton_Click">
                    <Button.Resources>
                        <Style TargetType="Border">
                            <Setter Property="CornerRadius" Value="6"/>
                        </Style>
                    </Button.Resources>
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Background" Value="#D9534F"/>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#C9302C"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>
            </Grid>
        </Border>

        <!-- Нижняя панель -->
        <Border Grid.Row="3" 
        Background="White" 
        Padding="20" 
        BorderThickness="1,0,0,0"
        BorderBrush="#EEEEEE">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Общая выручка -->
                <StackPanel Orientation="Horizontal" 
                   VerticalAlignment="Center">
                    <TextBlock Text="Общая выручка:" 
                       FontSize="16" 
                       FontWeight="SemiBold" 
                       Foreground="#2C3E50"
                       Margin="0,0,10,0"/>
                    <TextBlock x:Name="TotalRevenueText" 
                       Text="25,400 ₽" 
                       FontSize="18" 
                       FontWeight="Bold" 
                       Foreground="#27AE60"/>
                </StackPanel>

                <!-- Кнопка сформировать отчет -->
                <Button Content="📊 Сформировать отчет" 
                Style="{StaticResource ReportButtonStyle}"
                Grid.Column="1" Click="Button_Click_2" 
                />
            </Grid>
        </Border>
    </Grid>

</Window>
