<Window x:Class="project.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:project"
        mc:Ignorable="d"
        Title="MainWindow" Height="520" Width="400" WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Background="#f8f9fa">
    <Grid>
        <Border Background="White" 
            BorderBrush="#955251" 
            BorderThickness="2"
            CornerRadius="10"
            Width="350" 
            Height="400"
            VerticalAlignment="Center"
            HorizontalAlignment="Center">

            <StackPanel Margin="30" VerticalAlignment="Center">
                <Image Source="/гранат.jpg" Width="64" Height="64" Margin="0,0,0,10"/>

                <!-- Заголовок -->
                <TextBlock Text="Авторизация" 
                      FontSize="24" 
                      FontWeight="Bold" 
                      Foreground="#955251"
                      HorizontalAlignment="Center"
                      Margin="0,0,0,30"/>

                <!-- Поле для логина -->
                <StackPanel Margin="0,0,0,20">
                    <TextBlock Text="Логин:" 
                          FontWeight="SemiBold"
                          Margin="0,0,0,5"/>
                    <TextBox x:Name="LoginTextBox" 
                        Height="35" 
                        FontSize="14"
                        Padding="10,0,10,0"
                        BorderBrush="#CCCCCC"
                        BorderThickness="1"
                        Text="{Binding login, UpdateSourceTrigger=PropertyChanged}"/>
                </StackPanel>

                <!-- Поле для пароля -->
                <StackPanel Margin="0,0,0,30">
                    <TextBlock Text="Пароль:" 
                          FontWeight="SemiBold"
                          Margin="0,0,0,5"/>
                    <PasswordBox x:Name="PasswordBox" 
                            Height="35" 
                            FontSize="14"
                            Padding="10,0,10,0"
                            BorderBrush="#CCCCCC"
                            BorderThickness="1"
                          />
                </StackPanel>

                <!-- Кнопка входа -->
                <Button x:Name="LoginButton" 
                    Content="Войти" 
                    Height="40" 
                    Background="#5CB85C"
                    Foreground="White"
                    FontSize="16"
                    FontWeight="Bold"
                    BorderThickness="0"
                    Cursor="Hand"
                    
                    IsDefault="True" Click="LoginButton_Click">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Opacity" Value="1"/>
                            <Style.Triggers>
                                <Trigger Property="IsEnabled" Value="False">
                                    <Setter Property="Opacity" Value="0.6"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>

                <!-- Сообщение об ошибке -->
                <TextBlock x:Name="ErrorTextBlock" 
                      Text="" 
                      Foreground="Red" 
                      FontSize="12"
                      TextWrapping="Wrap"
                      HorizontalAlignment="Center"
                      Margin="0,15,0,0"
                      Visibility="Collapsed"/>

                <!-- Индикатор загрузки -->
                <ProgressBar x:Name="LoginProgressBar" 
                        Height="4" 
                        Margin="0,10,0,0"
                        Visibility="Collapsed"
                        IsIndeterminate="True"/>

            </StackPanel>
        </Border>
    </Grid>
</Window>
