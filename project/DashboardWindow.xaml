<Window x:Class="project.DashboardWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:project"
        mc:Ignorable="d"
        Title="DashboardWindow" Height="450" Width="777">
    <Window.Resources>
        <!-- Стиль для кнопок навигации -->
        <Style x:Key="NavButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#FFFFFF"/>
            <Setter Property="Foreground" Value="#2C3E50"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="20,15"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Margin" Value="0,0,0,5"/>
            <Style.Resources>
                <Style TargetType="Border">
                    <Setter Property="CornerRadius" Value="8"/>
                </Style>
            </Style.Resources>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#D4AF37"/>
                    <Setter Property="Foreground" Value="White"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Стиль для кнопки выхода -->
        <Style x:Key="ExitButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="#FFFFFF"/>
            <Setter Property="Padding" Value="15,8"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Style.Resources>
                <Style TargetType="Border">
                    <Setter Property="CornerRadius" Value="4"/>
                </Style>
            </Style.Resources>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#FFFFFF"/>
                    <Setter Property="Foreground" Value="#D4AF37"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Шапка -->
        <Border Background="#955251" Padding="15" BorderThickness="0,0,0,2" BorderBrush="#955251">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Логотип и название -->
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                    <!-- Логотип салона -->
                    <Image Source="/2.jpg"
           Width="36" Height="36" Margin="0,0,12,0">
                        <Image.Effect>
                            <DropShadowEffect BlurRadius="8" ShadowDepth="2" Opacity="0.3"/>
                        </Image.Effect>
                    </Image>

                    <!-- Название -->
                    <TextBlock Text="Гранат" 
               Foreground="White" 
               FontSize="22" 
               FontWeight="Bold"
               VerticalAlignment="Center"/>
                </StackPanel>

                <!-- Заголовок панели -->
                <TextBlock Text="Панель администратора" 
                           Foreground="White" 
                           FontSize="16"
                           FontWeight="Medium"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Center"
                           Grid.Column="1"/>

                <!-- Кнопка выхода -->
                <StackPanel Orientation="Horizontal" 
                            HorizontalAlignment="Right" 
                            VerticalAlignment="Center"
                            Grid.Column="2">
                    <Button Content="Выйти" 
                            Style="{StaticResource ExitButtonStyle}" Click="Button_Click"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Основное содержимое -->
        <Grid Grid.Row="1" Margin="15">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="250"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Панель навигации -->
            <Border Background="#FFFFFF" 
                    CornerRadius="10" 
                    Padding="15"
                    Margin="0,0,15,0"
                    >
                <StackPanel>
                    <TextBlock Text="Управление" 
                               Foreground="#2C3E50" 
                               FontSize="16" 
                               FontWeight="Bold"
                               Margin="0,0,0,15"/>

                    <Button Content="👥 Сотрудники" 
                            Style="{StaticResource NavButtonStyle}" Click="Button_Click_3"
                           />

                    <Button Content="📅 Расписание" 
                            Style="{StaticResource NavButtonStyle}" Click="Button_Click_2"
                            />

                    <Button Content="💰 Финансы" 
                            Style="{StaticResource NavButtonStyle}" Click="Button_Click_1"
                            />
                   

                    <!-- Статистика сегодня -->
                    <Border Background="#F8F9FA" 
                            CornerRadius="8" 
                            Padding="12" 
                            Margin="0,20,0,0">
                        <StackPanel>
                            <TextBlock Text="Сегодня" 
                                       Foreground="#2C3E50" 
                                       FontWeight="SemiBold"
                                       Margin="0,0,0,8"/>
                            <TextBlock Text="Записей: 12" 
                                       Foreground="#27AE60" 
                                       FontSize="12"/>
                            <TextBlock Text="Выручка: 25,400 ₽" 
                                       Foreground="#27AE60" 
                                       FontSize="12"/>
                            <TextBlock Text="Свободных окон: 3" 
                                       Foreground="#E74C3C" 
                                       FontSize="12"/>
                        </StackPanel>
                    </Border>
                </StackPanel>
            </Border>

            <!-- Область заметок -->
            <Border Grid.Column="1" 
                    Background="#FFFFFF" 
                    CornerRadius="10" 
                    Padding="20"
                    >
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Заголовок заметок -->
                    <StackPanel Orientation="Horizontal" 
                                Margin="0,0,0,15">
                        <TextBlock Text="📝 Заметки на сегодня" 
                                   Foreground="#2C3E50" 
                                   FontSize="18" 
                                   FontWeight="Bold"/>
                        <TextBlock Text="{Binding CurrentDate}" 
                                   Foreground="#7F8C8D" 
                                   FontSize="12" 
                                   Margin="10,0,0,0"
                                   VerticalAlignment="Bottom"/>
                    </StackPanel>

                    <!-- Список заметок -->
                    <ScrollViewer Grid.Row="1" 
                                  VerticalScrollBarVisibility="Auto"
                                  Margin="0,0,0,15">
                        <StackPanel>
                            <!-- Пример заметки -->
                            <Border Background="#FFF9E6" 
                                    CornerRadius="8" 
                                    Padding="12" 
                                    Margin="0,0,0,10"
                                    BorderThickness="1"
                                    BorderBrush="#FFEBB2">
                                <StackPanel>
                                    <TextBlock Text="🔴 Важные клиенты сегодня:" 
                                               FontWeight="SemiBold" 
                                               Foreground="#E67E22"/>
                                    <TextBlock Text="• Иванова А. - 14:00 (окрашивание)" 
                                               Margin="15,5,0,0"/>
                                    <TextBlock Text="• Петрова С. - 16:30 (стрижка + укладка)" 
                                               Margin="15,2,0,0"/>
                                </StackPanel>
                            </Border>

                            <!-- Еще пример заметки -->
                            <Border Background="#E8F5E8" 
                                    CornerRadius="8" 
                                    Padding="12" 
                                    Margin="0,0,0,10"
                                    BorderThickness="1"
                                    BorderBrush="#C8E6C9">
                                <StackPanel>
                                    <TextBlock Text="💡 Напоминания:" 
                                               FontWeight="SemiBold" 
                                               Foreground="#27AE60"/>
                                    <TextBlock Text="• Заказать краску L'Oreal - заканчивается" 
                                               Margin="15,5,0,0"/>
                                    <TextBlock Text="• Подготовить кабинет к вечерним клиентам" 
                                               Margin="15,2,0,0"/>
                                </StackPanel>
                            </Border>

                            <!-- Заметка о сотрудниках -->
                            <Border Background="#E3F2FD" 
                                    CornerRadius="8" 
                                    Padding="12" 
                                    Margin="0,0,0,10"
                                    BorderThickness="1"
                                    BorderBrush="#BBDEFB">
                                <StackPanel>
                                    <TextBlock Text="👥 Персонал:" 
                                               FontWeight="SemiBold" 
                                               Foreground="#2980B9"/>
                                    <TextBlock Text="• Мария больна - перераспределить записи" 
                                               Margin="15,5,0,0"/>
                                    <TextBlock Text="• Анна приходит в 12:00" 
                                               Margin="15,2,0,0"/>
                                </StackPanel>
                            </Border>
                        </StackPanel>
                    </ScrollViewer>

                    <!-- Поле для новой заметки -->
                    <StackPanel Grid.Row="2">
                        <TextBox x:Name="NewNoteTextBox" 
                                 Height="60" 
                                 TextWrapping="Wrap"
                                 VerticalScrollBarVisibility="Auto"
                                 
                                 Background="#F8F9FA"
                                 BorderThickness="1"
                                 BorderBrush="#DDD"
                                 
                                 Padding="10"
                                 Margin="0,0,0,10"/>
                        <Button Content="Добавить заметку" 
                                Background="#5CB85C " 
                                Foreground="White"
                                FontWeight="SemiBold"
                                Padding="15,8"
                                BorderThickness="0"
                                
                                HorizontalAlignment="Right"
                                Cursor="Hand"
                                />
                    </StackPanel>
                </Grid>
            </Border>
        </Grid>
    </Grid>
</Window>
