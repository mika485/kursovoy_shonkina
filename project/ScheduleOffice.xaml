<Window x:Class="project.ScheduleOffice"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:project"
        mc:Ignorable="d"
        Title="ScheduleOffice" Height="600" Width="1000">
    <Grid>
        <Grid.Resources>
            <Style TargetType="Button" x:Key="ScheduleButtonStyle">
                <Setter Property="Background" Value="#5CB85C"/>
                <Setter Property="Foreground" Value="White"/>
                <Setter Property="BorderBrush" Value="Transparent"/>
                <Setter Property="FontWeight" Value="SemiBold"/>
                <Setter Property="Cursor" Value="Hand"/>
                <Setter Property="Padding" Value="5"/>
            </Style>
        </Grid.Resources>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Шапка -->
            <RowDefinition Height="*"/>
            <!-- Расписание -->
        </Grid.RowDefinitions>

        <!-- Шапка -->
        <Border Grid.Row="0" Background="#955251" Padding="10">
            <DockPanel>
                <Ellipse Width="40" Height="40" Fill="White" DockPanel.Dock="Left" Margin="5"/>
                <TextBlock Text="Гранат" Foreground="White" FontSize="18" FontWeight="Bold" Margin="10,0"/>
                <TextBlock Text="Иванова И.И. - мастер маникюра" Foreground="White" FontSize="16" 
                           FontWeight="SemiBold" HorizontalAlignment="Center" VerticalAlignment="Center"/>
            </DockPanel>
        </Border>

        <!-- Панель расписания -->
        <Grid Grid.Row="1" Margin="10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="80"/>
                <!-- Время -->
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Grid.RowDefinitions>
                <RowDefinition Height="30"/>
                <!-- Заголовки дней -->
                <!-- 12 строк для времени -->
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Заголовки дней недели -->
            <TextBlock Text="Время" Grid.Row="0" Grid.Column="0" 
                       FontWeight="Bold" HorizontalAlignment="Center"/>
            <TextBlock Text="Пн" Grid.Row="0" Grid.Column="1" FontWeight="Bold" HorizontalAlignment="Center"/>
            <TextBlock Text="Вт" Grid.Row="0" Grid.Column="2" FontWeight="Bold" HorizontalAlignment="Center"/>
            <TextBlock Text="Ср" Grid.Row="0" Grid.Column="3" FontWeight="Bold" HorizontalAlignment="Center"/>
            <TextBlock Text="Чт" Grid.Row="0" Grid.Column="4" FontWeight="Bold" HorizontalAlignment="Center"/>
            <TextBlock Text="Пт" Grid.Row="0" Grid.Column="5" FontWeight="Bold" HorizontalAlignment="Center"/>
            <TextBlock Text="Сб" Grid.Row="0" Grid.Column="6" FontWeight="Bold" HorizontalAlignment="Center"/>
            <TextBlock Text="Вс" Grid.Row="0" Grid.Column="7" FontWeight="Bold" HorizontalAlignment="Center"/>

            <!-- Время слева -->
            <TextBlock Text="12:00" Grid.Row="1" Grid.Column="0" VerticalAlignment="Center" HorizontalAlignment="Center"/>
            <TextBlock Text="12:30" Grid.Row="2" Grid.Column="0" VerticalAlignment="Center" HorizontalAlignment="Center"/>
            <TextBlock Text="13:00" Grid.Row="3" Grid.Column="0" VerticalAlignment="Center" HorizontalAlignment="Center"/>
            <TextBlock Text="13:30" Grid.Row="4" Grid.Column="0" VerticalAlignment="Center" HorizontalAlignment="Center"/>
            <TextBlock Text="14:00" Grid.Row="5" Grid.Column="0" VerticalAlignment="Center" HorizontalAlignment="Center"/>
            <TextBlock Text="14:30" Grid.Row="6" Grid.Column="0" VerticalAlignment="Center" HorizontalAlignment="Center"/>
            <TextBlock Text="15:00" Grid.Row="7" Grid.Column="0" VerticalAlignment="Center" HorizontalAlignment="Center"/>
            <TextBlock Text="15:30" Grid.Row="8" Grid.Column="0" VerticalAlignment="Center" HorizontalAlignment="Center"/>
            <TextBlock Text="16:00" Grid.Row="9" Grid.Column="0" VerticalAlignment="Center" HorizontalAlignment="Center"/>
            <TextBlock Text="16:30" Grid.Row="10" Grid.Column="0" VerticalAlignment="Center" HorizontalAlignment="Center"/>
            <TextBlock Text="17:00" Grid.Row="11" Grid.Column="0" VerticalAlignment="Center" HorizontalAlignment="Center"/>
            <TextBlock Text="17:30" Grid.Row="12" Grid.Column="0" VerticalAlignment="Center" HorizontalAlignment="Center"/>

            <!-- Ячейки расписания -->
            

            <!-- Генерация сетки вручную: 7 столбцов × 12 строк -->
            <!-- Пример для первой строки (12:00) -->
            <Button Grid.Row="1" Grid.Column="1" Style="{StaticResource ScheduleButtonStyle}" Click="ScheduleButton_Click"/>
            <Button Grid.Row="1" Grid.Column="2" Style="{StaticResource ScheduleButtonStyle}" Click="ScheduleButton_Click"/>
            <Button Grid.Row="1" Grid.Column="3" Style="{StaticResource ScheduleButtonStyle}" Click="ScheduleButton_Click"/>
            <Button Grid.Row="1" Grid.Column="4" Style="{StaticResource ScheduleButtonStyle}" Click="ScheduleButton_Click"/>
            <Button Grid.Row="1" Grid.Column="5" Style="{StaticResource ScheduleButtonStyle}" Click="ScheduleButton_Click"/>
            <Button Grid.Row="1" Grid.Column="6" Style="{StaticResource ScheduleButtonStyle}" Click="ScheduleButton_Click"/>
            <Button Grid.Row="1" Grid.Column="7" Style="{StaticResource ScheduleButtonStyle}" Click="ScheduleButton_Click"/>

            <!-- Вторая строка (12:30) -->
            <Button Grid.Row="2" Grid.Column="1" Style="{StaticResource ScheduleButtonStyle}" Click="ScheduleButton_Click"/>
            <Button Grid.Row="2" Grid.Column="2" Style="{StaticResource ScheduleButtonStyle}" Click="ScheduleButton_Click"/>
            <Button Grid.Row="2" Grid.Column="3" Style="{StaticResource ScheduleButtonStyle}" Click="ScheduleButton_Click"/>
            <Button Grid.Row="2" Grid.Column="4" Style="{StaticResource ScheduleButtonStyle}" Click="ScheduleButton_Click"/>
            <Button Grid.Row="2" Grid.Column="5" Style="{StaticResource ScheduleButtonStyle}" Click="ScheduleButton_Click"/>
            <Button Grid.Row="2" Grid.Column="6" Style="{StaticResource ScheduleButtonStyle}" Click="ScheduleButton_Click"/>
            <Button Grid.Row="2" Grid.Column="7" Style="{StaticResource ScheduleButtonStyle}" Click="ScheduleButton_Click"/>

            <!-- … и так далее для всех 12 строк -->
            <Button Grid.Row="3" Grid.Column="1" Style="{StaticResource ScheduleButtonStyle}" Click="ScheduleButton_Click"/>
            <Button Grid.Row="3" Grid.Column="2" Style="{StaticResource ScheduleButtonStyle}" Click="ScheduleButton_Click"/>
            <Button Grid.Row="3" Grid.Column="3" Style="{StaticResource ScheduleButtonStyle}" Click="ScheduleButton_Click"/>
            <Button Grid.Row="3" Grid.Column="4" Style="{StaticResource ScheduleButtonStyle}" Click="ScheduleButton_Click"/>
            <Button Grid.Row="3" Grid.Column="5" Style="{StaticResource ScheduleButtonStyle}" Click="ScheduleButton_Click"/>
            <Button Grid.Row="3" Grid.Column="6" Style="{StaticResource ScheduleButtonStyle}" Click="ScheduleButton_Click"/>
            <Button Grid.Row="3" Grid.Column="7" Style="{StaticResource ScheduleButtonStyle}" Click="ScheduleButton_Click"/>

            <Button Grid.Row="4" Grid.Column="1" Style="{StaticResource ScheduleButtonStyle}" Click="ScheduleButton_Click"/>
            <Button Grid.Row="4" Grid.Column="2" Style="{StaticResource ScheduleButtonStyle}" Click="ScheduleButton_Click"/>
            <Button Grid.Row="4" Grid.Column="3" Style="{StaticResource ScheduleButtonStyle}" Click="ScheduleButton_Click"/>
            <Button Grid.Row="4" Grid.Column="4" Style="{StaticResource ScheduleButtonStyle}" Click="ScheduleButton_Click"/>
            <Button Grid.Row="4" Grid.Column="5" Style="{StaticResource ScheduleButtonStyle}" Click="ScheduleButton_Click"/>
            <Button Grid.Row="4" Grid.Column="6" Style="{StaticResource ScheduleButtonStyle}" Click="ScheduleButton_Click"/>
            <Button Grid.Row="4" Grid.Column="7" Style="{StaticResource ScheduleButtonStyle}" Click="ScheduleButton_Click"/>
        </Grid>
    </Grid>
</Window>
