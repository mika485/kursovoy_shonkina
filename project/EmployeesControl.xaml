<Window x:Class="project.EmployeesControl"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:project"
        mc:Ignorable="d"
        Title="EmployeesControl" Height="450" Width="870" Loaded="EmployeesControl_Loaded" >
    <Window.Resources>
        <!-- Стиль для кнопки выхода -->
        <Style x:Key="ExitButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="#FFFFFF"/>
            <Setter Property="Padding" Value="15,8"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Style.Resources>
                <Style TargetType="Border">
                    <Setter Property="CornerRadius" Value="4"/>
                </Style>
            </Style.Resources>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#FFFFFF"/>
                    <Setter Property="Foreground" Value="#D4AF37"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Grid Background="White">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Шапка -->
            <RowDefinition Height="Auto"/>
            <!-- Поиск -->
            <RowDefinition Height="*"/>
            <!-- Таблица -->
            <RowDefinition Height="Auto"/>
            <!-- Поля ввода -->
            <RowDefinition Height="Auto"/>
            <!-- Кнопки -->
        </Grid.RowDefinitions>

        <!-- Шапка -->
        <Border Background="#955251" Padding="15" BorderThickness="0,0,0,2" BorderBrush="#955251">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Логотип и название -->
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                    <Ellipse Width="36" Height="36" Fill="#FFFFFF" Margin="0,0,12,0">
                        <Ellipse.Effect>
                            <DropShadowEffect BlurRadius="8" ShadowDepth="2" Opacity="0.3"/>
                        </Ellipse.Effect>
                    </Ellipse>
                    <TextBlock Text="Гранат" 
                Foreground="White" 
                FontSize="22" 
                FontWeight="Bold"
                VerticalAlignment="Center"/>
                </StackPanel>

                <!-- Заголовок панели -->
                <TextBlock Text="Панель редактирования сотрудников" 
            Foreground="White" 
            FontSize="16"
            FontWeight="Medium"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            Grid.Column="1"/>

                
                
            </Grid>
        </Border>

        <!-- Поиск и фильтры -->
        <StackPanel Orientation="Horizontal" Margin="10" Grid.Row="1">
            <TextBox x:Name="txtSearch" Width="200" />
            <Button Content="Найти" Margin="10,0,0,0" Padding="10,5" />

        </StackPanel>

        <!-- Список клиентов -->
        <DataGrid x:Name="dgClients" Grid.Row="2" AutoGenerateColumns="False" Margin="10">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Фамилия" Binding="{Binding last_name}" Width="*"/>
                <DataGridTextColumn Header="Имя" Binding="{Binding first_name}" Width="*"/>
                <DataGridTextColumn Header="Отчество" Binding="{Binding patronymic}" Width="*"/>
                <DataGridTextColumn Header="Должность" Binding="{Binding post}" Width="*"/>
                <DataGridTextColumn Header="Квалификация" Binding="{Binding qualification}" Width="*"/>
                
            </DataGrid.Columns>
        </DataGrid>

        <!-- Поля ввода с подписями -->
        <Grid Grid.Row="3" Margin="10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="150"/>
                <ColumnDefinition Width="150"/>
                <ColumnDefinition Width="150"/>
                <ColumnDefinition Width="150"/>
                <ColumnDefinition Width="150"/>
                <ColumnDefinition Width="100"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <!-- Заголовки -->
                <RowDefinition Height="Auto"/>
                <!-- Поля ввода -->
            </Grid.RowDefinitions>

            <!-- Заголовки -->
            <TextBlock Text="Фамилия" Grid.Row="0" Grid.Column="0" 
        HorizontalAlignment="Center" FontWeight="Bold"/>
            <TextBlock Text="Имя" Grid.Row="0" Grid.Column="1" 
        HorizontalAlignment="Center" FontWeight="Bold"/>
            <TextBlock Text="Отчество" Grid.Row="0" Grid.Column="2" 
        HorizontalAlignment="Center" FontWeight="Bold"/>
            <TextBlock Text="Должность" Grid.Row="0" Grid.Column="3" 
        HorizontalAlignment="Center" FontWeight="Bold"/>
            <TextBlock Text="Квалификация" Grid.Row="0" Grid.Column="4" 
        HorizontalAlignment="Center" FontWeight="Bold"/>
            

            <!-- Поля ввода -->
            <TextBox x:Name="txtLastName" Grid.Row="1" Grid.Column="0" Margin="5,0,5,5" Height="18" VerticalAlignment="Bottom"/>
            <TextBox x:Name="txtFirstName" Grid.Row="1" Grid.Column="1" Margin="5"/>
            <TextBox x:Name="txtPatronymic" Grid.Row="1" Grid.Column="2" Margin="5"/>
            <TextBox x:Name="txtPhone" Grid.Row="1" Grid.Column="3" Margin="5"/>
            <TextBox x:Name="txtEmail" Grid.Row="1" Grid.Column="4" Margin="5"/>
            
        </Grid>

        <!-- Кнопки управления -->
        <StackPanel Grid.Row="4" Orientation="Horizontal" Margin="10">
            <Button Content="➕ Новая сотрудник" Background="#5cb85c" Foreground="White" Padding="15,5" Margin="5" />
            <Button Content="🗑 Удалить сотрудника" Background="#d9534f" Foreground="White" Padding="15,5" Margin="5" />
            <Button Content="✏ Изменить информацию" Background="#f0ad4e" Foreground="White" Padding="15,5" Margin="5" />
            

        </StackPanel>
    </Grid>
</Window>
